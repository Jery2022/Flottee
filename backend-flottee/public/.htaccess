RewriteEngine On

# Autoriser l'accès direct aux fichiers existants
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Rediriger les routes API vers index.php
RewriteRule ^api/(.*)$ index.php [QSA,L]

# Rediriger les vues admin sans extension vers leur équivalent .php
RewriteRule ^admin/([a-zA-Z0-9_-]+)$ admin/$1.php [L]

# Fallback général
RewriteRule ^ index.php [QSA,L]
